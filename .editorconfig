root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.yml]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[Makefile*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
